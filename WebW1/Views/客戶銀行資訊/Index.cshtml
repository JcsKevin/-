@model IEnumerable<WebW1.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
@using (Html.BeginForm())
{
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
			@Html.TextBox("search1", "", new { placeholder = "請輸入關鍵字", @onchange = "submit();", @size = 4 })
		</th>
        <th>
            @Html.DisplayNameFor(model => model.銀行名稱)
			@Html.TextBox("search2", "", new { placeholder = "關鍵字", @onchange = "submit();", @size = 4 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行代碼)
			@Html.TextBox("search3", "", new { placeholder = "關鍵字", @onchange = "submit();", @size = 4 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.分行代碼)
			@Html.TextBox("search4", "", new { placeholder = "關鍵字", @onchange = "submit();", @size = 4 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶名稱)
			@Html.TextBox("search5", "", new { placeholder = "關鍵字", @onchange = "submit();", @size = 4 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶號碼)
			@Html.TextBox("search6", "", new { placeholder = "關鍵字", @onchange = "submit();", @size = 4 })
        </th>
        <th></th>
    </tr>
}

@foreach (var item in Model) {
    <tr>
		<td>
			@Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
